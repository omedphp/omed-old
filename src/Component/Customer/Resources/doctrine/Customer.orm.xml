<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="Omed\Component\Customer\Model\Customer" table="customers">
        <id name="id" column="customer_id" length="5"/>
        <field name="companyName" length="40"/>
        <field name="contactName" length="30" nullable="true"/>
        <field name="contactTitle" length="30" nullable="true"/>
        <field name="address" length="60" nullable="true"/>
        <field name="city" length="15" nullable="true"/>
        <field name="region" length="15" nullable="true"/>
        <field name="postalCode" length="10" nullable="true"/>
        <field name="country" length="15" nullable="true"/>
        <field name="phone" length="24" nullable="true"/>
        <field name="fax" length="24" nullable="true"/>
    </entity>
</doctrine-mapping>